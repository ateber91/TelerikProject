@using SD.Data.Models.DomainModels;
@using Microsoft.AspNetCore.Identity;

@model IEnumerable<Notification>

<li class="dropdown nav-item">
	<a href="javascript:void(0)" class="dropdown-toggle nav-link" data-toggle="dropdown">
		<i class="tim-icons icon-sound-wave"><span class="badge badge-light badge-pill" id="notificationsCount">0</span></i>
		<p class="d-lg-none">
			Notifications
		</p>
	</a>
	<ul class="dropdown-menu dropdown-menu-right dropdown-navbar" id="notificationsList">
		@foreach (var notification in Model)
		{
			<nav-item dropdown-item>@notification.Message</nav-item>
		}
	</ul>
</li>

