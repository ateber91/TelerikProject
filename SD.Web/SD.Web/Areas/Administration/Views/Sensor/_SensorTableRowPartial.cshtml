@model SensorTableViewModel

<td>@Model.Name</td>
<td>@Model.LastValue</td>
<td>@Model.Latitude</td>
<td>@Model.Longitude</td>
<td>@(Model.AlarmTriggered)</td>
<td>@(Model.IsPublic)</td>
<td>
	<div class=" dark-theme">
		<a class="page-link"
		   asp-area="Administration" asp-controller="Sensor" asp-action="Modify" asp-route-id="@Model.Id">Modify Sensor</a>
	</div>
</td>
<td>
	<div class=" dark-theme">
		@if (Model.IsDeleted == true)
		{
			<a class="page-link"
			   asp-area="Administration" asp-controller="Sensor" asp-action="Restore" asp-route-id="@Model.Id" 
			   data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#@Model.Id">Restore</a>
		}
		else
		{
			<a class="page-link"
			   asp-area="Administration" asp-controller="Sensor" asp-action="Disable" asp-route-id="@Model.Id"
			   data-ajax="true" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-update="#@Model.Id">Disable</a>
		}
	</div>
</td>